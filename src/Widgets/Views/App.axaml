<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:Widgets.ViewModels"
             x:Class="Widgets.Views.App"
			 x:DataType="vm:AppViewModel"
             xmlns:local="using:Widgets"
             RequestedThemeVariant="Dark">
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon 
				Command="{CompiledBinding ShowMainWindow}"
				Icon="/Resources/avalonia-logo.ico"
				ToolTipText="Widgets">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Command="{CompiledBinding Exit}" Header="Exit" />
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
	
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>