<Window
    x:Class="widgets.Features.Home.HomeWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Home"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="10,15,10,10">
        <StackPanel MaxHeight="320">
            <DockPanel VerticalAlignment="Center" Margin="2">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="4">
                    <Button>
                        <Image Width="19" Height="19" Source="/Assets/play.png"></Image>
                    </Button>
                    <Button>
                        <Image Width="21" Height="21" Source="/Assets/eng.png"></Image>
                    </Button>
                </StackPanel>
                <TextBlock VerticalAlignment="Center">Widget 1</TextBlock>
            </DockPanel>

            <DockPanel VerticalAlignment="Center" Margin="2">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="4">
                    <Button>
                        <Image Width="19" Height="19" Source="/Assets/play.png"></Image>
                    </Button>
                    <Button>
                        <Image Width="21" Height="21" Source="/Assets/eng.png"></Image>
                    </Button>
                </StackPanel>
                <TextBlock VerticalAlignment="Center">Widget 2</TextBlock>
            </DockPanel>

            <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="10,12" Margin="0,10,0,0">Create New Widget</Button>
        </StackPanel>   
    </StackPanel>
</Window>
