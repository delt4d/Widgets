<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="widgets.Features.Widget.Components.WidgetPanelControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel Margin="2" VerticalAlignment="Center">
        <StackPanel
            DockPanel.Dock="Right"
            Orientation="Horizontal"
            Spacing="4">
            <Button Name="ActivateWidgetButton">
                <Image
                    Width="19"
                    Height="19"
                    Source="/Assets/play.png" />
            </Button>

            <Button>
                <Image
                    Width="21"
                    Height="21"
                    Source="/Assets/eng.png" />
            </Button>
        </StackPanel>

        <TextBlock VerticalAlignment="Center" Name="WidgetText" />
    </DockPanel>
</UserControl>
